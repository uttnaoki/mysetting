// 既定値を上書きするには、このファイル内にキー バインドを挿入します
[
    // 一行カット
    {
        "key": "ctrl+k",
        "command": "editor.action.clipboardCutAction",
        "when": "textInputFocus && !editorReadonly"
    },
    // undo
    {
        "key": "ctrl+u",
        "command": "undo",
        "when": "textInputFocus && !editorReadonly"
    },
    // redo
    {
        "key": "ctrl+shift+u",
        "command": "redo",
        "when": "textInputFocus && !editorReadonly"
    },
    // 行移動（Up）
    {
        "key": "alt+p",
        "command": "editor.action.moveLinesUpAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    // 行移動（Down）
    {
        "key": "alt+n",
        "command": "editor.action.moveLinesDownAction",
        "when": "editorTextFocus && !editorReadonly"
    },
    // newUntitledFile (cmd+n -> shift+cmd+n)
    {
        "key": "shift+alt+n",
        "command": "workbench.action.files.newUntitledFile"
    },
    // emacs (up)
    {
        "key": "ctrl+p",
        "command": "cursorUp",
        "when": "textInputFocus"
    },
    // emacs (down)
    {
        "key": "ctrl+n",
        "command": "cursorDown",
        "when": "textInputFocus"
    },
    // emacs (left)
    {
        "key": "ctrl+b",
        "command": "cursorLeft",
        "when": "textInputFocus"
    },
    // emacs (right)
    {
        "key": "ctrl+f",
        "command": "cursorRight",
        "when": "textInputFocus"
    },
    // emacs (home)
    {
        "key": "ctrl+a",
        "command": "cursorHome",
        "when": "editorTextFocus"
    },
    // emacs (end)
    {
        "key": "ctrl+e",
        "command": "cursorEnd",
        "when": "editorTextFocus"
    },
    // emacs (backspace)
    {
        "key": "ctrl+h",
        "command": "deleteLeft",
        "when": "textInputFocus && !editorReadonly"
    },
    // emacs (delete)
    {
        "key": "ctrl+d",
        "command": "deleteRight",
        "when": "textInputFocus && !editorReadonly"
    },
    // 単語選択
    {
        "key": "alt+d",
        "command": "editor.action.addSelectionToNextFindMatch",
        "when": "editorFocus"
    },
    // 検索
    {
        "key": "alt+f",
        "command": "actions.find"
    },
    {
        "key": "alt+a",
        "command": "editor.action.selectAll",
        "when": "textInputFocus"
    },
    // 選択範囲拡張（下）
    {
        "key": "ctrl+shift+n",
        "command": "cursorDownSelect",
        "when": "textInputFocus"
    },
    // 選択範囲拡張（上）
    {
        "key": "ctrl+shift+p",
        "command": "cursorUpSelect",
        "when": "textInputFocus"
    },
    // 選択範囲拡張（右）
    {
        "key": "ctrl+shift+f",
        "command": "cursorRightSelect",
        "when": "textInputFocus"
    },
    // 選択範囲拡張（左）
    {
        "key": "ctrl+shift+b",
        "command": "cursorLeftSelect",
        "when": "textInputFocus"
    },
]